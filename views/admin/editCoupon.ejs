<%- include('./partials/adminHeader.ejs')  %> 
  </head>

  <div class="card mb-5 m-auto mt-5" style="height: 350px; width: 700px">
    <div class="card-body">
      
      <form
        action="/admin/updateCoupon/<%= coupon._id %> "
        method="post"
        enctype="multipart/form-data"
        
      >
      
      <div class="mb-3">
        <label class="form-label" for="basic-default-company"
          >Name</label
        >
        <input
          type="text"
          class="form-control"
          name="name"
          id="basic-default-company"
          value="<%= coupon.name %> "
          required
        />
      </div>
        <div class="mb-3">
          <label class="form-label" for="basic-default-company"
            >Coupon Code</label
          >
          <input
            type="text"
            class="form-control"
            name="code"
            id="basic-default-company"
            value="<%= coupon.code %> "
            required
          />
        </div>
        <div class="mb-3">
            <label class="form-label" for="basic-default-company"
              >Discount Rate</label
            >
            <input
              type="text"
              class="form-control"
              name="discount"
              id="basic-default-company"
              value="<%= coupon.discount %> "
              required
            />
          </div>
        </div>

        <div class="mb-5 mx-4">
          <button type="submit" class="btn btn-primary">Send</button>
        </div>
      </form>
      
    </div>
  </div>
</html>