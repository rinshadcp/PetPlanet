                      <li><a href="./contact.html">Contact</a></li>
                  </ul>
              </nav>
          </div>
          <div class="col-lg-3">
              <div class="header__right">
          <% if(!login){ %> 

                  <div class="header__right__auth">
                      <a href="/login">Login</a>
                      <a href="/signup">Register</a>
                  </div>
